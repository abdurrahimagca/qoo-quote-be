FROM node:22-alpine
WORKDIR /app

# Install pnpm and nest CLI globally
RUN npm install -g pnpm @nestjs/cli

# Copy package files
COPY package.json pnpm-lock.yaml ./

# Install all dependencies (including dev dependencies)
RUN pnpm install

# Copy the rest of the application
COPY . .

CMD ["pnpm", "start:dev"] 